<div class="untree_co-section">
  <div class="container" style="margin-bottom: 100px;">
    <div class="row">
      <div class="col-md-6 mb-5 mb-md-0" style="margin: auto">

        <h2 class="h3 mb-3 text-black">Reset Password</h2>
        <div class="p-3 p-lg-5 border bg-white">
          <form action="/reset-password/<%= token %>" method="POST">
            <div class="form-group row">
              <div class="col-md-12">
                <% if (typeof user !== 'undefined') { %>
                  <% if (typeof error !== 'undefined' && error.password) { %>
                    <label class="text-black">
                      Password <span class="text-danger">*</span>
                    </label>
                    <input class="form-control" style="border: 1px solid red;" type="password" name="password">
                    <span class="text-danger" style="font-size: 12px;"><%= error.password %></span>
                  <% } else { %>
                    <label class="text-black">
                      Password <span class="text-danger">*</span>
                    </label>
                    <input class="form-control" type="password" name="password" value="<%= user.password %>">
                  <% } %>
                <% } else { %>
                  <label class="text-black">
                    Password <span class="text-danger">*</span>
                  </label>
                  <input class="form-control" type="password" name="password">
                <% } %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-12">
                <% if (typeof user !== 'undefined') { %>
                  <% if (typeof error !== 'undefined' && error.confirmPassword) { %>
                    <label class="text-black">
                      Confirm password <span class="text-danger">*</span>
                    </label>
                    <input class="form-control" style="border: 1px solid red;" type="password" name="confirmPassword">
                    <span class="text-danger" style="font-size: 12px;"><%= error.confirmPassword %></span>
                  <% } else { %>
                    <label class="text-black">
                      Confirm password <span class="text-danger">*</span>
                    </label>
                    <input class="form-control" type="password" name="confirmPassword" value="<%= user.confirmPassword %>">
                  <% } %>
                <% } else { %>
                  <label class="text-black">
                    Confirm password <span class="text-danger">*</span>
                  </label>
                  <input class="form-control" type="password" name="confirmPassword">
                <% } %>
              </div>
            </div>

            <div class="form-group" style="margin-top: 20px">
              <button type="submit" class="btn btn-black btn-sm py-3 btn-block">Reset</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>